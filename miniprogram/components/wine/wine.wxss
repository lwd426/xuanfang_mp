/* components/feed.wxss */
.feed {
  position: relative;
  border-bottom: 1px solid #e6e6e6;
  overflow: hidden;
  display: flex;
  padding: 18rpx 0rpx;
}
.content {
  /* padding: 20rpx; */
    width: 60%;
    display: inline-block;
}
.title {
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  font-size: 32rpx;
  height: 60rpx;
  line-height: 60rpx;
  margin: 14rpx 0;
  font-weight: 800;
  color: #2e3135;
}
.time {
  margin-left: 32rpx;
  text-decoration: line-through;
  font-size: 24rpx;
  color: gray;
  margin-right: 24rpx;
}

.author {
  font-size: 38rpx;
  font-weight: 600;
  font-family: fantasy;
}

.desc {
  font-size: 28rpx;
  height: 44rpx;
  margin-bottom: 18rpx;
    /* text-align: center; */
}
.pic {
  display: inline-block;
    width: 40%;
    max-width: 368rpx;
    max-height: 268rpx;
}

.desc_content {
  font-size: 24rpx;
  height: 72rpx;
  padding-bottom: 12rpx;
  font-weight: 300;
  color: #6f6f6f;
    
}

.feed_opt {
  float: left;
  color: #000000;
}

.feed .opt{
  /* float: right; */
}

.feed .opt button {
  float: right;
  width: 110rpx;
  display: inline;
  font-size: 24rpx;
  border-radius: 36rpx;
  padding: 10rpx 24rpx;
  margin-left: 10rpx;
  background: #ffbc00;
  border: none;
}
.feed .opt .gift {
  /* float: right; */
    width: 54rpx;
    display: inline;
    font-size: 24rpx;
    border-radius: 50%;
    padding: 0rpx;
    margin-left: 32rpx;
    background: #ffbc00;
    border: none;
}
.num-opt {
  display: inline-flex;
  width: 66%;
}
.feed .opt .count {
  width: 159rpx;
  font-size: 28rpx;
  display: block;
}