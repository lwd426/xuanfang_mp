/**index.wxss**/


.userinfo {
  height: 93rpx;
  position: relative;
  display: flex;
  flex-direction: column;
  align-items: center;
  color: #aaa;
  margin: 20rpx;
}

.userinfo-avatar {
  overflow: hidden;
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

/* 基本信息区 */
.basic-info-block {
  position: fixed;
  width: 100%;
  display: block;
  height: 450rpx;
  z-index: 1000;
  box-shadow: 0px 4px 4px #8888882e;
  background: #ffffff;
}

/* vip卡区域 */
.vip-block {
  width: 94%;
  height: 300rpx;
  margin: 3%;
  background: #ffc300;
  position: relative;
  border-radius: 32rpx;
}

.card {
  height: 150rpx;
  width: 100%;
  background: #ffb100;
  border-radius: 32rpx 32rpx 0rpx 0rpx;
}

.pic {
  width: 380rpx;
  height: 128rpx;
  margin-left: 24rpx;
  margin-top: 23rpx;
  border-radius: 16rpx 16rpx 0rpx 0rpx;
}

.usermotto {
  margin-top: 200px;
}

/* vip区域酒窖区 */
.vip-wine {
  width: 50%;
  display: inline-block;
  height: 150rpx;
  margin: 24rpx 32rpx;
}

.vip-wine .title {
  font-size: 24rpx;
  width: 100%;
  display: block;
}

.vip-wine .count {
  font-size: 36rpx;
  font-weight: bold;
}

.vip-go {
  width: 248rpx;
  height: 108rpx;
  display: flex;
  background: #ffb100;
  position: fixed;
  right: 3%;
  line-height: 108rpx;
  top: 302rpx;
} 

.vip-go-left {
  height: 108rpx;
  width: 108rpx;
  border-radius: 50%;
  display: inline-block;
  background: #ffb100;
  position: fixed;
  right: 202rpx;
  top: 302rpx;
}

.vip-go-text {
  margin-left: 20rpx;
  font-size: 32rpx;
  font-weight: bold;
  color: #ffffff;
}

.vip-go image {
  width: 32rpx;
    height: 32rpx;
    line-height: 36rpx;
    position: relative;
    margin-top: 39rpx;
    display: inline-block;
}

.vip-go .arrow-right {
  width: 44rpx;
    height: 44rpx;
    line-height: 44rpx;
    margin-top: 36rpx;
    margin-left: 18rpx;
}

.card-text {
  display: flex;
}

/* 我的酒窖区 */
.celler-block{
  /* position: fixed; */
  width: 100%;
  height: auto;
  margin-top: 480rpx;
  border-radius: 12rpx;
  z-index: 1;
}