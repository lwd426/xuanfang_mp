/**index.wxss**/
.wine-pic {
  width: 100%;
  height: 480rpx;
}

.content-block {
  height: auto;
  width: 100%;
  border-radius: 36rpx 0rpx 0rpx 0rpx;
  margin-top: -36rpx;
  display: inherit;
  background: #ffffff;
}

.content-block .scroll-view{
  width: 100%;
  height: 100%;
  padding: 24rpx 48rpx;
}

.content-block .name {
  margin: 20rpx 0rpx;
  font-size: 32rpx;
  font-weight: 500;
}

.content-block .desc {
  font-size: 28rpx;
  height: 72rpx;
  padding-bottom: 12rpx;
  font-weight: 300;
  color: #6f6f6f;
}

/* 操作区 */
.opt-block {
  border-top: 1rpx solid #dedede;
  position: fixed;
  bottom: 0rpx;
  height: 100rpx;
  padding: 12rpx 20rpx;
  width: 100%;
}

.add-button {
  float: right;
  right: 42rpx;
  width: 400rpx;
  background: #ffc300 !important;
  border: none !important;
}