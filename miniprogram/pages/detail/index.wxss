/**index.wxss**/
.wine-pic {
  width: 100%;
  height: 480rpx;
}

.content-block {
  height: auto;
  width: 100%;
  border-radius: 36rpx 0rpx 0rpx 0rpx;
  margin-top: -36rpx;
  display: inherit;
  background: #ffffff;
  display: inline-block;
  margin-bottom: 100rpx;
}

.content-block .scroll-view{
  width: 100%;
  height: 100%;
  background: #f7f2ee;
  border-radius: 36rpx 0rpx 0rpx 0rpx;
}

.detail-pic {
  width: 100%;
  margin-top: -8rpx;
}

.content-block .name {
  margin: 44rpx 48rpx;
  font-size: 32rpx;
  font-weight: 500;
}

.content-block .desc {
  font-size: 28rpx;
  height: 72rpx;
  padding-bottom: 12rpx;
  font-weight: 300;
  margin: 0rpx 48rpx;
  color: #6f6f6f;
}

/* 操作区 */
.opt-block {
  border-top: 1rpx solid #dedede;
  position: fixed;
  bottom: 0rpx;
  height: 100rpx;
  background: #ffffff;
  padding: 12rpx 20rpx;
  width: 100%;
}
.num-opt {
  display: inline-flex;
    width: 24%;
    line-height: 66rpx;
    margin: 0 13%;
    text-align: center;
}

.num-opt text{
  display: inline-block;
    margin: 0rpx 20rpx;
}

.add-icon, .del-icon {
  height: 48rpx;
  width: 48rpx;
  display: inline-table;
  margin-top: 10rpx;
}

.add-button {
  float: right;
  right: 42rpx;
  width: 400rpx;
  background: #ffc300 !important;
  border: none !important;
}

